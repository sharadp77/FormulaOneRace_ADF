{
	"name": "AGGREGATE_DATA_FLOW",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_HR_Employees",
						"type": "DatasetReference"
					},
					"name": "HREmployees"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_SINK_AGGREGATE_DATA",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "aggregatebydepartments"
				}
			],
			"scriptLines": [
				"source(output(",
				"          EMPLOYEE_ID as string,",
				"          FIRST_NAME as string,",
				"          LAST_NAME as string,",
				"          EMAIL as string,",
				"          PHONE_NUMBER as string,",
				"          HIRE_DATE as string,",
				"          JOB_ID as string,",
				"          SALARY as integer,",
				"          COMMISSION_PCT as string,",
				"          MANAGER_ID as string,",
				"          DEPARTMENT_ID as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> HREmployees",
				"HREmployees aggregate(groupBy(DEPARTMENT_ID),",
				"     Total_salary = sum(SALARY),",
				"          Total_Employees = count(EMPLOYEE_ID)) ~> aggregatebydepartments",
				"aggregatebydepartments sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     filePattern:'aggregate_by_department_id.csv',",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}